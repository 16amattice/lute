<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>Images</title>
    <script type="text/javascript" src="/js/jquery.js" charset="utf-8"></script>
  </head>

  <script>
    function save_image_locally(src, langid, text) {
      console.log(`saving ${src} for ${langid}/${text}`);

      $.post(
        '/bing/save',
        {
          src: src,
          langid: langid,
          text: text
        },
        function(data, status){
          alert("Data: " + data + "\nStatus: " + status);
        });
    }
  </script>

  <body>
    <p>{{ langid }}, {{ text }}</p>

    {% for image in images %}
    <hr />
    {{ image['src'] }}
    <br />
    <span onclick='save_image_locally("{{ image['src'] }}", {{ langid }}, "{{ text }}")'>
      {{ image['html']|raw }}
    </span>
    {% endfor %}
  </body>

</html>
